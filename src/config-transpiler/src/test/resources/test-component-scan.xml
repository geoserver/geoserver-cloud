<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Single package component scan -->
    <context:component-scan base-package="com.example.single"/>

    <!-- Multiple packages component scan (comma-separated) -->
    <context:component-scan base-package="com.example.first, com.example.second"/>
    
    <!-- Component scan with additional attributes -->
    <context:component-scan base-package="com.example.advanced" 
                           use-default-filters="false"
                           resource-pattern="**/*.class"/>

    <!-- Simple bean for testing -->
    <bean id="testBean" class="java.lang.String">
        <constructor-arg value="test"/>
    </bean>

</beans>